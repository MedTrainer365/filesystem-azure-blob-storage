{
    "name": "medtrainer/filesystem-azure-blob-storage",
    "description": "Filesystem Adapter for Azure Blob Storage",
    "license": "CopyRight",
    "authors": [
        {
            "name": "MedTrainer",
            "email": "support@medtrainer.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "MedTrainer\\Flysystem\\AzureBlobStorage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MedTrainer\\Flysystem\\AzureBlobStorage\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "process-timeout": 0
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "league/flysystem": "^2.0",
        "microsoft/azure-storage-blob": "*",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.3",
        "league/flysystem-adapter-test-utilities": "^2.3",
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
